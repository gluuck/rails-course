<h2 style="color: #B00100;margin: 0 auto">show item <%= @item.name%></h2>

<ul>
<li>Price: <%= @item.price %> $</li>
<li>Weight: <%= @item.weight %> </li>
<li>Description: <%= @item.description %> </li>
<li> <%= button_to "Delete", item_path(@item), method: :delete, class:"btn btn-danger" %></li> <br>
<li> <%= button_to "Edit", edit_item_path(@item.id),method: :get, class:"btn btn-primary" %></li>
</ul>
