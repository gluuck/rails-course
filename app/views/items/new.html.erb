<div class = "col-sm-12 my-auto">
<h2 style="color: #B00100;margin: 0 auto">create new_item</h2>


<%= simple_form_for @item do |f|%>
   <%= f.input :name,  input_html: {class: "form-text"} %>
   <%= f.input :price, input_html: {class: "form-text"} %> 
   <%= f.input :description, label: t('item.description'),input_html: {class: "form-text"} %>
  </br>
  </br>
  <%= f.button :submit ,class: "btn btn-primary" %>  
  <% end %>
</div>